{
  "manifest_version": 2,

  "name": "Twitter Plunger",
  "description": "Bypass your blocked Twitter accounts (Unblocker)",
  "version": "1.0",
  "author": "kaluaim",

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "*://twitter.com/*"
  ],

  "content_scripts": [
    {
      "matches": ["*://twitter.com/*"],
      "css": ["style.css"],
      "js": ["resources/jquery.js", "extension.js"]
    }
  ],

  "background": {
    "scripts": ["resources/jquery.js", "background.js"],
    "persistent": true
  }

}
